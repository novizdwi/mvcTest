<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Mvc Employee Test", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <ul class="nav navbar-nav pl-2">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Home")">
                        Home
                    </a>
                </li>
                <li class="dropdown-submenu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <span class="nav-label">Departments</span><span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("Department", "Department")">Department</a></li>
                        <li><a href="@Url.Action("DepartmentList", "Department")">Deparment List</a></li>
                        <li><a href="@Url.Action("DeptEmployee", "Department")">Dept Employee</a></li>
                        <li><a href="@Url.Action("DeptEmployeeList", "Department")">Dept Employee Lists</a></li>
                        <li><a href="@Url.Action("DeptManager", "Department")">Dept Manager</a></li>
                        <li><a href="@Url.Action("DeptManagerLists", "Department")">Dept Manager Lists</a></li>
                    </ul>
                </li>

                <li class="dropdown-submenu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <span class="nav-label">Employees</span><span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("Employee", "Employee")">Employee</a></li>
                        <li><a href="@Url.Action("EmployeeList", "Employee")">Employee List</a></li>
                        <li><a href="@Url.Action("Salary", "Employee")">Salary</a></li>
                        <li><a href="@Url.Action("SalaryList", "Employee")">Salary List</a></li>
                    </ul>
                </li>
            </ul>
        </div>

        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
